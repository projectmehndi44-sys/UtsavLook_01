rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Securely check for admin role: must be signed in, config must exist, and UID must be a key in the members map.
      return isSignedIn() && 
             exists(/databases/$(database)/documents/config/teamMembers) && 
             (request.auth.uid in get(/databases/$(database)/documents/config/teamMembers).data.members);
    }

    // --- Publicly Readable Collections ---
    
    // Artists and MasterServices are public for browsing.
    match /artists/{artistId} {
      allow read: if true;
      allow create, update: if isOwner(artistId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Config documents are generally readable by all to bootstrap the app.
    // MasterServices was previously its own collection, now it's under config.
    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- User-Specific & Business Logic Collections ---
    
    // Customers can only manage their own profile. Admins have oversight.
    match /customers/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isSignedIn();
      allow list, delete: if isAdmin();
    }
    
    // Bookings have complex ownership rules based on the user's role.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.customerId == request.auth.uid;
      allow read, update: if (isOwner(resource.data.customerId)) ||
                             (isSignedIn() && request.auth.uid in resource.data.artistIds) || 
                             isAdmin();
      allow list, delete: if isAdmin();
    }
    
    // Anyone can submit an artist application, but only admins can process it.
    match /pendingArtists/{pendingId} {
      allow create: if true;
      allow read, list, delete: if isAdmin();
    }

    // Notifications are private to the recipient or admins.
    match /notifications/{notificationId} {
       allow read: if (isOwner(resource.data.artistId) || isOwner(resource.data.customerId)) || isAdmin();
       allow list, write: if isAdmin();
    }
    
    // Payout history is sensitive and for admins only.
    match /payoutHistory/{payoutId} {
      allow read, list, write: if isAdmin();
    }
  }
}
