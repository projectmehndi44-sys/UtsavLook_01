rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of a document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if the logged-in user has a specific role (e.g., 'Super Admin').
    function isRole(role) {
       return get(/databases/$(database)/documents/config/teamMembers).data.members
             .filter(member, member.id == request.auth.uid && member.role == role).size() > 0;
    }

    // --- PUBLIC-READABLE COLLECTIONS ---
    // These collections need to be visible to anyone visiting the site.
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isRole('Super Admin') || isRole('team-member');
    }
    
    match /masterServices/{serviceId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    // --- USER-SPECIFIC COLLECTIONS ---
    // Users can only access their own data.
    match /customers/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /bookings/{bookingId} {
      allow read: if isOwner(resource.data.customerId) 
                   || request.auth.uid in resource.data.artistIds
                   || isRole('Super Admin') || isRole('team-member');
      allow create: if request.auth.uid == request.resource.data.customerId;
      allow update: if isRole('Super Admin') || isRole('team-member')
                     || (request.auth.uid in resource.data.artistIds && request.resource.data.status == 'Completed');
    }

    match /pendingArtists/{pendingId} {
      allow create: if true; // Anyone can apply to be an artist.
      allow read, delete: if isRole('Super Admin');
    }

    // --- CONFIGURATION COLLECTION ---
    // Default deny all to secure config documents, then allow specific access.
    match /config/{document=**} {
      allow read, write: if false;
    }
    
    // Allows any signed-in user to have their role verified, which is CRITICAL for login.
    // Only Super Admins can change the list of team members.
    match /config/teamMembers {
      allow read: if request.auth != null;
      allow write: if isRole('Super Admin');
    }
    
    // The rest of the config documents are public to read, but only editable by Super Admins.
    match /config/availableLocations {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /config/companyProfile {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /config/financialSettings {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /config/masterServices {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /config/placeholderImages {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /config/benefitImages {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /config/promotionalImage {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /config/promotions {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
  }
}
