
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeamMember(role) {
      // NOTE: Using .filter().size() > 0 is the correct way to check for existence in a list in security rules.
      return get(/databases/$(database)/documents/config/teamMembers).data.members
             .filter(member, member.id == request.auth.uid && member.role == role).size() > 0;
    }
    
    // PUBLIC: Artists and master services can be read by anyone.
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isTeamMember('Super Admin') || isTeamMember('team-member');
    }
    
    match /masterServices/{serviceId} {
      allow read: if true;
      allow write: if isTeamMember('Super Admin');
    }

    // CUSTOMERS: Can only read/write their own data.
    match /customers/{userId} {
      allow read, write: if isOwner(userId);
    }

    // BOOKINGS: Customers can create. Admins can manage. Artists can view their own.
    match /bookings/{bookingId} {
      allow read: if isOwner(resource.data.customerId) 
                   || request.auth.uid in resource.data.artistIds
                   || isTeamMember('Super Admin') 
                   || isTeamMember('team-member');
      allow create: if request.auth.uid == request.resource.data.customerId;
      allow update: if isTeamMember('Super Admin') || isTeamMember('team-member')
                     || (request.auth.uid in resource.data.artistIds && request.resource.data.status == 'Completed');
    }

    // PENDING ARTISTS: Can be created by anyone, read/deleted by admins.
    match /pendingArtists/{pendingId} {
        allow create: if true;
        allow read, delete: if isTeamMember('Super Admin');
    }

    // CONFIG: Most config is admin-only, but some can be public-read.
    match /config/{configId} {
        // Default deny all
        allow read, write: if false;
    }
    
    match /config/availableLocations {
      allow read: if true;
      allow write: if isTeamMember('Super Admin');
    }

    match /config/companyProfile {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }
    
    match /config/financialSettings {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }

    match /config/masterServices {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }

    match /config/placeholderImages {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }
    
     match /config/benefitImages {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }
    
    match /config/promotionalImage {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }

    match /config/promotions {
        allow read: if true;
        allow write: if isTeamMember('Super Admin');
    }
    
    match /config/teamMembers {
      allow read: if request.auth != null;
      allow write: if isTeamMember('Super Admin');
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
