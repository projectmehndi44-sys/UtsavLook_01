rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeamMember() {
      // Correctly checks if a document for the user exists in the teamMembers collection.
      return exists(/databases/$(database)/documents/teamMembers/$(request.auth.uid));
    }
    
    function isRole(role) {
      // Correctly gets the user's document and checks their role property.
      return isTeamMember() && get(/databases/$(database)/documents/teamMembers/$(request.auth.uid)).data.role == role;
    }

    // --- DATA COLLECTIONS ---

    match /artists/{artistId} {
      // Public can read artist profiles for the website to work.
      // An artist can write to their own profile, or a team member can.
      allow read: if true;
      allow write: if isOwner(artistId) || isTeamMember();
    }
    
    match /customers/{userId} {
      // A customer can only access their own document.
      allow read, write: if isOwner(userId);
    }

    match /bookings/{bookingId} {
      allow read: if isTeamMember() || isOwner(resource.data.customerId) || request.auth.uid in resource.data.artistIds;
      allow create: if isOwner(request.resource.data.customerId);
      allow update: if isTeamMember() || (request.auth.uid in resource.data.artistIds && request.resource.data.status == 'Completed');
    }

    match /payoutHistory/{payoutId} {
      allow read, create: if isTeamMember();
    }

    match /pendingArtists/{pendingId} {
      // Anyone can create (submit an application).
      // Only Super Admins can manage the pending list.
      allow create: if true;
      allow read, delete: if isRole('Super Admin');
    }

    // --- TEAM MANAGEMENT COLLECTION ---
    match /teamMembers/{userId} {
      // Any signed-in user can read the list to check permissions. THIS IS THE LOGIN FIX.
      allow read: if request.auth != null;
      // Only Super Admins can add, edit, or remove team members.
      allow write: if isRole('Super Admin');
    }
    
    // --- CONFIGURATION COLLECTION ---
    // All config documents are publicly readable for the site to function,
    // but only a Super Admin can change them.
    match /config/{document} {
        allow read: if true;
        allow write: if isRole('Super Admin');
    }
  }
}
